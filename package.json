{
  "name": "pcos-smart-assistant",
  "version": "1.0.0",
  "description": "PCOS Smart Assistant - Health Tracking Platform",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test tests/e2e.spec.js --project=chromium -g \"should load form page successfully|should load dashboard page|should load results page|should have print button\" --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm test && npm run test:e2e",
    "test:all:ps": "npm test; npm run test:e2e",
    "lint": "eslint frontend/**/*.js",
    "lint:fix": "eslint frontend/**/*.js --fix",
    "build:css": "npx cleancss -o frontend/styles.min.css frontend/styles.css && npx cleancss -o frontend/styles.min.css frontend/styles/healthcare.css",
    "build:js": "npx terser frontend/app.js -o frontend/app.min.js --compress --mangle",
    "build": "npm run build:css && npm run build:js",
    "dev": "npx serve frontend -l 3000",
    "start": "cd backend && python app.py"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^10.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "terser": "^5.26.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules_old/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules_old/"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "lenis": "^1.3.17"
  }
}
